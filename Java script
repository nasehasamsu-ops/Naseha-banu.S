    <div class="container">
        <header>
            <h1>JavaScript Interactive Examples</h1>
            <p>Learn JavaScript through practical examples and interactive demos</p>
        </header>
        
        <div class="card-container">
            <div class="card">
                <h2>Variables & Data Types</h2>
                <p>JavaScript variables can hold different data types:</p>
                
                <div class="code-example">
                    // Variable declarations<br>
                    let message = "Hello, World!";<br>
                    const pi = 3.14159;<br>
                    var count = 10;<br><br>
                    
                    // Different data types<br>
                    let number = 42;<br>
                    let text = "JavaScript";<br>
                    let isActive = true;<br>
                    let person = { name: "John", age: 30 };<br>
                    let colors = ["red", "green", "blue"];
                </div>
                
                <div class="interactive-demo">
                    <button onclick="showDataType()">Show Data Types</button>
                    <div class="output" id="dataTypeOutput"></div>
                </div>
            </div>
            
            <div class="card">
                <h2>Functions</h2>
                <p>Functions are reusable blocks of code:</p>
                
                <div class="code-example">
                    // Function declaration<br>
                    function greet(name) {<br>
                    &nbsp;&nbsp;return `Hello, ${name}!`;<br>
                    }<br><br>
                    
                    // Arrow function<br>
                    const multiply = (a, b) => a * b;<br><br>
                    
                    // Function call<br>
                    const result = multiply(5, 7);
                </div>
                
                <div class="interactive-demo">
                    <input type="text" id="nameInput" placeholder="Enter your name">
                    <button onclick="greetUser()">Greet Me</button>
                    <div class="output" id="greetOutput"></div>
                </div>
            </div>
        </div>
        
        <div class="card-container">
            <div class="card">
                <h2>DOM Manipulation</h2>
                <p>JavaScript can change HTML content, styles, and attributes:</p>
                
                <div class="code-example">
                    // Changing text content<br>
                    document.getElementById("demo").innerHTML = "Hello JavaScript!";<br><br>
                    
                    // Changing styles<br>
                    document.getElementById("demo").style.color = "red";<br><br>
                    
                    // Handling events<br>
                    document.getElementById("btn").addEventListener("click", myFunction);
                </div>
                
                <div class="interactive-demo">
                    <button onclick="changeText()">Change Text</button>
                    <button onclick="changeColor()">Change Color</button>
                    <button onclick="resetElement()">Reset</button>
                    <div class="output" id="domOutput">This element will be manipulated</div>
                </div>
            </div>
            
            <div class="card">
                <h2>Conditional Logic</h2>
                <p>JavaScript supports conditional statements:</p>
                
                <div class="code-example">
                    let time = new Date().getHours();<br>
                    let greeting;<br><br>
                    
                    if (time < 10) {<br>
                    &nbsp;&nbsp;greeting = "Good morning";<br>
                    } else if (time < 20) {<br>
                    &nbsp;&nbsp;greeting = "Good day";<br>
                    } else {<br>
                    &nbsp;&nbsp;greeting = "Good evening";<br>
                    }
                </div>
                
                <div class="interactive-demo">
                    <button onclick="checkTime()">Check Time of Day</button>
                    <div class="output" id="timeOutput"></div>
                </div>
            </div>
        </div>
        
        <div class="card-container">
            <div class="card">
                <h2>Loops</h2>
                <p>JavaScript provides different ways to loop through data:</p>
                
                <div class="code-example">
                    // For loop<br>
                    for (let i = 0; i < 5; i++) {<br>
                    &nbsp;&nbsp;console.log("Number: " + i);<br>
                    }<br><br>
                    
                    // While loop<br>
                    let i = 0;<br>
                    while (i < 5) {<br>
                    &nbsp;&nbsp;console.log("Number: " + i);<br>
                    &nbsp;&nbsp;i++;<br>
                    }
                </div>
                
                <div class="interactive-demo">
                    <button onclick="runLoop()">Run Loop Example</button>
                    <div class="output" id="loopOutput"></div>
                </div>
            </div>
            
            <div class="card">
                <h2>Timer & Interval</h2>
                <p>JavaScript can execute code at timed intervals:</p>
                
                <div class="code-example">
                    // Set timeout (runs once after delay)<br>
                    setTimeout(() => {<br>
                    &nbsp;&nbsp;console.log("This runs after 2 seconds");<br>
                    }, 2000);<br><br>
                    
                    // Set interval (runs repeatedly)<br>
                    setInterval(() => {<br>
                    &nbsp;&nbsp;console.log("This runs every second");<br>
                    }, 1000);
                </div>
                
                <div class="interactive-demo">
                    <div class="timer-display" id="timer">00:00</div>
                    <button onclick="startTimer()">Start Timer</button>
                    <button onclick="stopTimer()">Stop Timer</button>
                </div>
            </div>
        </div>
        
        <div class="card">
            <h2>Event Handling</h2>
            <p>JavaScript can respond to user events like clicks, input, and more:</p>
            
            <div class="code-example">
                // Adding event listeners<br>
                document.getElementById("myBtn").addEventListener("click", displayDate);<br><br>
                
                // Input events<br>
                document.getElementById("myInput").addEventListener("input", updateText);<br><br>
                
                // Mouse events<br>
                document.getElementById("myDiv").addEventListener("mouseover", changeColor);
            </div>
            
            <div class="interactive-demo">
                <div class="color-box" id="colorBox"></div>
                <button onmouseover="changeBoxColor()">Hover over me to change color</button>
                <input type="text" id="textInput" placeholder="Type something here">
                <div class="output" id="eventOutput">Text will appear here as you type</div>
            </div>
        </div>
        
        <footer>
            <p>Created with JavaScript • Refresh the page to reset all examples</p>
        </footer>
    </div>

    <script>
        // Variables and Data Types
        function showDataType() {
            const output = document.getElementById('dataTypeOutput');
            output.innerHTML = `
                <strong>Data Types Example:</strong><br>
                Number: ${typeof 42}<br>
                String: ${typeof "JavaScript"}<br>
                Boolean: ${typeof true}<br>
                Object: ${typeof {name: "John", age: 30}}<br>
                Array: ${typeof ["red", "green", "blue"]}
            `;
        }
        
        // Functions
        function greetUser() {
            const name = document.getElementById('nameInput').value || 'Guest';
            document.getElementById('greetOutput').innerHTML = `Hello, ${name}! Welcome to JavaScript!`;
        }
        
        // DOM Manipulation
        function changeText() {
            const element = document.getElementById('domOutput');
            element.innerHTML = 'Text changed with JavaScript!';
        }
        
        function changeColor() {
            const element = document.getElementById('domOutput');
            element.style.color = '#ffcc00';
            element.style.fontWeight = 'bold';
        }
        
        function resetElement() {
            const element = document.getElementById('domOutput');
            element.innerHTML = 'This element will be manipulated';
            element.style.color = '#fff';
            element.style.fontWeight = 'normal';
        }
        
        // Conditional Logic
        function checkTime() {
            const time = new Date().getHours();
            let greeting;
            
            if (time < 10) {
                greeting = "Good morning!";
            } else if (time < 17) {
                greeting = "Good day!";
            } else if (time < 20) {
                greeting = "Good evening!";
            } else {
                greeting = "Good night!";
            }
            
            document.getElementById('timeOutput').innerHTML = `${greeting} The current hour is ${time}.`;
        }
        
        // Loops
        function runLoop() {
            const output = document.getElementById('loopOutput');
            output.innerHTML = '';
            
            for (let i = 1; i <= 5; i++) {
                output.innerHTML += `Iteration #${i}<br>`;
            }
        }
        
        // Timer & Interval
        let timerInterval;
        let seconds = 0;
        
        function startTimer() {
            clearInterval(timerInterval);
            seconds = 0;
            updateTimerDisplay();
            
            timerInterval = setInterval(() => {
                seconds++;
                updateTimerDisplay();
            }, 1000);
        }
        
        function stopTimer() {
            clearInterval(timerInterval);
        }
        
        function updateTimerDisplay() {
            const minutes = Math.floor(seconds / 60);
            const remainingSeconds = seconds % 60;
            document.getElementById('timer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${remainingSeconds.toString().padStart(2, '0')}`;
        }
        
        // Event Handling
        function changeBoxColor() {
            const colors = ['#ff5733', '#33ff57', '#3357ff', '#f033ff', '#ff33a1'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            document.getElementById('colorBox').style.backgroundColor = randomColor;
        }
        
        // Input event listener
        document.getElementById('textInput').addEventListener('input', function() {
            document.getElementById('eventOutput').textContent = this.value;
        });
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Set up initial state for examples
            document.getElementById('colorBox').style.backgroundColor = '#ffcc00';
        });
    </script>
</body>
</html>
